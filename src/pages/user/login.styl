#user-login-register
  height 100%
  .form
    position absolute
    width 400px
    border 1px solid #efefef
    box-shadow 0px 0px 2px #333333
    left 50%
    top 50%
    transform translate(-50%, -50%)
    padding 20px
    border-radius 4px
    h1
      text-align center
      font-size 18px
      line-height 30px
    .c-input
      margin-top 20px
      label
        display inline-block
        width 100px
        text-align right
        padding-right 10px
      .btn
        background #00b7a3
        width 100px
        color #fff
        border none
        cursor pointer